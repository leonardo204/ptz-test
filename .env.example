# Azure OpenAI 설정
# 실제 값으로 변경하여 .env 파일로 저장하세요

# Azure OpenAI API 키
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here

# Azure OpenAI 엔드포인트 URL
ENDPOINT_URL=https://your-resource-name.openai.azure.com/

# Azure OpenAI 배포 이름 (모델)
DEPLOYMENT_NAME=your-deployment-name

# Azure OpenAI API 버전
API_VERSION=2025-01-01-preview

# 서버 포트 (내부)
PORT=3135

# 외부 포트 (Nginx)
NGINX_PORT=18281

# 캐시 설정
CACHE_TTL=3600
CACHE_MAX_KEYS=100

# 로그 레벨 (debug, info, warn, error)
LOG_LEVEL=info

# Node 환경
NODE_ENV=production
